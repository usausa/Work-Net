<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <Target Name="CreateReference" AfterTargets="Build">
    <PropertyGroup>
      <ReferencesFile>$(ProjectDir)$(IntermediateOutputPath)Reference.txt</ReferencesFile>
    </PropertyGroup>

    <WriteLinesToFile File="$(ReferencesFile)" Lines="@(ReferencePath)" Overwrite="true" />
  </Target>

  <ItemGroup>
    <PackageReference Include="Usa.Smart.Core" Version="2.2.0" />
  </ItemGroup>

</Project>
