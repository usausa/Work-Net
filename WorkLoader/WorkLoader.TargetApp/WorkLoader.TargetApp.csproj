<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <Target Name="SmartDataAccessorBuild" AfterTargets="Build">
    <PropertyGroup>
      <SmartDataAccessorReferencesFile>$(ProjectDir)$(IntermediateOutputPath)Reference.txt</SmartDataAccessorReferencesFile>
    </PropertyGroup>

    <WriteLinesToFile File="$(SmartDataAccessorReferencesFile)" Lines="@(ReferencePath)" Overwrite="true"/>
  </Target>

  <ItemGroup>
    <ProjectReference Include="..\WorkLoader.Library\WorkLoader.Library.csproj" />
  </ItemGroup>

</Project>
