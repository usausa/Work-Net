<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net10.0-windows;net10.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Configurations>Debug;DebugLinux;DebugMac;Release</Configurations>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'DebugLinux' or '$(Configuration)' == 'DebugMac' or '$(Configuration)' == 'DebugWindows'">
    <Optimize>false</Optimize>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <DefineConstants>$(DefineConstants);DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup>
    <BuildPlatform></BuildPlatform>
    <BuildPlatform Condition="$(TargetFramework.Contains('windows'))">windows</BuildPlatform>
    <BuildPlatform Condition="!$(TargetFramework.Contains('windows')) and ('$(Configuration)' == 'DebugMac')">macos</BuildPlatform>
    <BuildPlatform Condition="!$(TargetFramework.Contains('windows')) and ('$(Configuration)' == 'DebugLinux')">linux</BuildPlatform>
  </PropertyGroup>

  <PropertyGroup Condition="'$(BuildPlatform)' == 'windows'">
    <DefineConstants>$(DefineConstants);PLATFORM_WINDOWS</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(BuildPlatform)' == 'macos'">
    <DefineConstants>$(DefineConstants);PLATFORM_MACOS</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(BuildPlatform)' == 'linux'">
    <DefineConstants>$(DefineConstants);PLATFORM_LINUX</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\WorkPlugin.Abstraction\WorkPlugin.Abstraction.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(BuildPlatform)' != ''">
    <ProjectReference Include="..\WorkPlugin.Plugin1\WorkPlugin.Plugin1.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(BuildPlatform)' == 'windows'">
    <ProjectReference Include="..\WorkPlugin.Plugin2\WorkPlugin.Plugin2.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(BuildPlatform)' == 'macos'">
    <ProjectReference Include="..\WorkPlugin.Plugin3\WorkPlugin.Plugin3.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(BuildPlatform)' == 'linux'">
    <ProjectReference Include="..\WorkPlugin.Plugin4\WorkPlugin.Plugin4.csproj" />
  </ItemGroup>

</Project>
