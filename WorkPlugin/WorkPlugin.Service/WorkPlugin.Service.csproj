<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>net10.0-windows;net10.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Configurations>Debug;DebugLinux;DebugMac;DebugWindows;Release</Configurations>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'DebugLinux' or '$(Configuration)' == 'DebugMac' or '$(Configuration)' == 'DebugWindows'">
    <Optimize>false</Optimize>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <DefineConstants>$(DefineConstants);DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup>
    <_IsWindowsTFM>false</_IsWindowsTFM>
    <_IsWindowsTFM Condition="$(TargetFramework.Contains('windows'))">true</_IsWindowsTFM>

    <IsWindowsPlatform Condition="'$(IsWindowsPlatform)' == ''">false</IsWindowsPlatform>
    <IsWindowsPlatform Condition="('$(_IsWindowsTFM)' == 'true') and ('$(Configuration)' == 'DebugWindows')">true</IsWindowsPlatform>

    <IsMacOSPlatform Condition="'$(IsMacOSPlatform)' == ''">false</IsMacOSPlatform>
    <IsMacOSPlatform Condition="('$(_IsWindowsTFM)' == 'false') and ('$(Configuration)' == 'DebugMac')">true</IsMacOSPlatform>

    <IsLinuxPlatform Condition="'$(IsLinuxPlatform)' == ''">false</IsLinuxPlatform>
    <IsLinuxPlatform Condition="('$(_IsWindowsTFM)' == 'false') and ('$(Configuration)' == 'DebugLinux')">true</IsLinuxPlatform>

    <IsAnyPlatform>false</IsAnyPlatform>
    <IsAnyPlatform Condition="('$(IsWindowsPlatform)' == 'true') or ('$(IsMacOSPlatform)' == 'true') or ('$(IsLinuxPlatform)' == 'true')">true</IsAnyPlatform>
  </PropertyGroup>

  <PropertyGroup Condition="'$(_IsWindowsTFM)' == 'true'">
    <DefineConstants>$(DefineConstants);WINDOWS_TFM</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(IsWindowsPlatform)' == 'true'">
    <DefineConstants>$(DefineConstants);ENABLE_WINDOWS</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(IsMacOSPlatform)' == 'true'">
    <DefineConstants>$(DefineConstants);ENABLE_MACOS</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(IsLinuxPlatform)' == 'true'">
    <DefineConstants>$(DefineConstants);ENABLE_LINUX</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\WorkPlugin.Abstraction\WorkPlugin.Abstraction.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(IsAnyPlatform)' == 'true'">
    <ProjectReference Include="..\WorkPlugin.Plugin1\WorkPlugin.Plugin1.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(IsWindowsPlatform)' == 'true'">
    <ProjectReference Include="..\WorkPlugin.Plugin2\WorkPlugin.Plugin2.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(IsMacOSPlatform)' == 'true'">
    <ProjectReference Include="..\WorkPlugin.Plugin3\WorkPlugin.Plugin3.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(IsLinuxPlatform)' == 'true'">
    <ProjectReference Include="..\WorkPlugin.Plugin4\WorkPlugin.Plugin4.csproj" />
  </ItemGroup>

</Project>
